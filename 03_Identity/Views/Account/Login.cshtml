@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model _03_Identity.Models.ViewModels.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Вход</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>
<body>
    <h2>Вход на сайт</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" method="Post">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Login (email)</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <a asp-action="Register" asp-controller="Account">
                        <input type="button" value="Регистрация" class="btn btn-primary" />
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>